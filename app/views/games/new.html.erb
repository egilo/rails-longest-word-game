<div class="container">
  <h1>New Game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
    <div class="blue-box"><%= letter %></div>
    <% end %>
  </div>

<div>
  <h2>What's the longest word you can find?</h2>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="attempt" placeholder="Type your longest word here">
    <%= hidden_field_tag :grid, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
    <input type="submit" value="Play">
  </form>

</div>



</div>
